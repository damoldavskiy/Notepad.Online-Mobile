<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotepadOnlineMobile.InputView">
    <ContentView.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource LoginButton}">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="BorderColor" Value="White"/>
            <Setter Property="BorderRadius" Value="2"/>
        </Style>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid>
            <BoxView Color="Black" Margin="30" CornerRadius="20" Opacity="0.8" HeightRequest="100" VerticalOptions="Center"/>
            <StackLayout Margin="50" VerticalOptions="Center">
                <Entry Text="{Binding Text}" HorizontalOptions="FillAndExpand" PlaceholderColor="#808080" TextColor="White" Placeholder="Enter new name"/>
                <StackLayout Orientation="Horizontal">
                    <Button Clicked="Submit_Clicked" HorizontalOptions="FillAndExpand" Text="Submit"/>
                    <Button Clicked="Cancel_Clicked" HorizontalOptions="FillAndExpand" Text="Cancel"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>