<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotepadOnlineMobile.AboutPage"
             BackgroundColor="{StaticResource Background}"
             Title="About">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <BoxView BackgroundColor="{StaticResource PrimaryDark}"/>
            <Image Source="logo.png" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label x:Name="content" Margin="20" Grid.Row="1" TextColor="{StaticResource TextLight}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>