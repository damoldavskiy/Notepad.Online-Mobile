<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NotepadOnlineMobile"
             x:Class="NotepadOnlineMobile.ExplorerPage"
             BackgroundColor="{StaticResource BackgroundDark}"
             Title="Explorer">
    <ContentPage.Content>
        <Grid>
            <ListView x:Name="menu" SeparatorVisibility="None" RowHeight="100">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="20" Margin="10,10,10,0" BackgroundColor="{StaticResource BackgroundLight}">
                                <Label FontSize="20" Text="{Binding Name}" TextColor="{StaticResource TextDark}"/>
                                <Label FontSize="15" Text="{Binding Description}" TextColor="{StaticResource TextLight}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <local:AddButton Click="AddItem_Clicked" LongClick="AddPhoto_Clicked" WidthRequest="60" HeightRequest="60" Margin="20" HorizontalOptions="End" VerticalOptions="End"/>
            <local:LoadingView x:Name="loading" IsVisible="False"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>