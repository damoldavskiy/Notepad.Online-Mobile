<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NotepadOnlineMobile"
             x:Class="NotepadOnlineMobile.LoginPage"
             BackgroundColor="{DynamicResource Background}">
    <ContentPage.Content>
        <Grid>
            <StackLayout Margin="30" VerticalOptions="Center">
                <Label FontSize="30" Margin="0,0,0,10" HorizontalOptions="Center" Text="Log in"/>
                <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="E-mail" Style="{DynamicResource LoginEntry}"/>
                <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Password" Style="{DynamicResource LoginEntry}"/>
                <Button Clicked="Signin_Clicked" Text="Sign in" Margin="0,10,0,0" Style="{DynamicResource LoginButton}"/>
                <Label FontSize="18" Margin="0,10,0,0" Text="Forgot password?" HorizontalOptions="Center" TextColor="{DynamicResource TextLight}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Forgot_Clicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            <local:LoadingView Showed="{Binding IsBusy}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>